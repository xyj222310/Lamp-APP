<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hint_forget_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="@string/tv_function_not_finish"
        android:textColor="#ff0000"
        android:textSize="34sp" />

    <com.yjtse.lamp.widgets.ClearEditText
        android:id="@+id/et_forget_input_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint_forget_string"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_bg"
        android:drawableRight="@android:drawable/ic_delete"
        android:hint="@string/inputUsernameStr"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColorHint="#bfc0c1" />

    <com.andexert.library.RippleView
        android:id="@+id/control_ripple"
        rv_centered="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/et_forget_input_number">

        <Button
            android:id="@+id/btn_forget_confirm"
            style="@style/Ripple_Button_BG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nextStep"
            android:clickable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </com.andexert.library.RippleView>

</RelativeLayout>
